@page
@model ThisIsSnackis.Pages.Admin.Posts.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Redigera inlägg</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Post.Id" />
            <div class="form-group">
                <label asp-for="Post.Title" class="control-label"></label>
                <input asp-for="Post.Title" class="form-control" />
                <span asp-validation-for="Post.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.ThePost" class="control-label"></label>
                <input asp-for="Post.ThePost" class="form-control" />
                <span asp-validation-for="Post.ThePost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.AuthorId" class="control-label"></label>
                <input asp-for="Post.AuthorId" class="form-control" />
                <span asp-validation-for="Post.AuthorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.Date" class="control-label"></label>
                <input asp-for="Post.Date" class="form-control" />
                <span asp-validation-for="Post.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.TheCategoryId" class="control-label"></label>
                <input asp-for="Post.TheCategoryId" class="form-control" />
                <span asp-validation-for="Post.TheCategoryId" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <input type="submit" value="Spara" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div><br />

<div>
    <a href="javascript:history.go(-1);" class="custom-link">Tillbaka</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
