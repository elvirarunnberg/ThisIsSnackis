@page
@model ThisIsSnackis.Pages.Admin.Posts.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Alla inlägg</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Posts[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Posts[0].ThePost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Posts[0].AuthorId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Posts[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Posts[0].TheCategoryId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Posts)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ThePost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AuthorId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TheCategoryId)
                </td>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.Id" class="custom-link">Inlägg</a>

                    @if (User.Identity.IsAuthenticated && (User.Identity.Name == "elvirarunnberg@hotmail.com" || User.Identity.Name == item.AuthorId))
                    {
                        <br />
                        <a asp-page="./Edit" asp-route-id="@item.Id">Redigera</a>
                        <a asp-page="./Delete" asp-route-id="@item.Id">Ta bort</a>
                    }

                   
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="javascript:history.go(-1);" class="custom-link">Tillbaka</a>