@page
@model ThisIsSnackis.Pages.Admin.Reports.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Anmälan</h1>

<div>
    <h4>Report</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Report.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Report.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Report.UserId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Report.UserId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Report.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Model.Report.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Report.PostId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Report.PostId)
        </dd>
        <dd class="col-sm-10">
            <a asp-page="/Admin/Posts/Details" asp-route-id="@Model.Report.PostId" class="custom-link">Till inlägg</a>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Report.Id" class="custom-link">Redigera</a> 
    <a href="javascript:history.go(-1);" class="custom-link">Tillbaka</a>
</div>
