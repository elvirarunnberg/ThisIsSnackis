@page
@model ThisIsSnackis.Pages.Admin.Comments.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Ny kommentar</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Comment.Text" class="control-label"></label>
                <textarea asp-for="Comment.Text" class="form-control" rows="8" cols="30"></textarea>
                <span asp-validation-for="Comment.Text" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Comment.UserId" class="control-label"></label>
                <input asp-for="Comment.UserId" class="form-control" />
                <span asp-validation-for="Comment.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment.ThePostId" class="control-label"></label>
                <input asp-for="Comment.ThePostId" class="form-control" />
                <span asp-validation-for="Comment.ThePostId" class="text-danger"></span>
            </div><br />
            
            <div class="form-group">
                <input type="submit" value="Spara" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div><br />

<div>
    <a href="javascript:history.go(-1);" class="custom-link">Tillbaka</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
