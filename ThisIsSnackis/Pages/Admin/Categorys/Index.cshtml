@page
@model ThisIsSnackis.Pages.Admin.Categorys.IndexModel



@{
    ViewData["Title"] = "Index";
}

<h1>Kategorier</h1>

@if (User.Identity.IsAuthenticated && User.Identity.Name == "elvirarunnberg@hotmail.com")
{
    <p>
        <a asp-page="Create">Skapa ny kategori</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Category) {
        <tr>
            <td><h5>
                @Html.DisplayFor(modelItem => item.Name)</h5>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                
                    <a asp-page="./Details" asp-route-id="@item.Id" class="custom-link">Alla inlägg</a> 
                    @if (User.Identity.IsAuthenticated && User.Identity.Name == "elvirarunnberg@hotmail.com")
                    {
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="custom-link">Redigera</a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="custom-link">Ta bort</a>
                    }



             


            </td>
        </tr>
}
    </tbody>
</table>
<a href="javascript:history.go(-1);" class="custom-link">Tillbaka</a>
