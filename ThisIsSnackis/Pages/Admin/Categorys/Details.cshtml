@page
@model ThisIsSnackis.Pages.Admin.Categorys.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Inlägg</h1>

<div>
   
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Description)
        </dd>
    </dl>
</div>

<ul>
    @foreach (var post in Model.Posts)
    {
        <p>
            <a asp-page="/Admin/Posts/Details" asp-route-id="@post.Id" class="anothercustom-link">@post.Title</a>
        </p>
    }


</ul>

<div>
    @if (User.Identity.IsAuthenticated && User.Identity.Name == "elvirarunnberg@hotmail.com")
    {
        <a asp-page="./Edit" asp-route-id="@Model.Category.Id" class="custom-link">Redigera</a>
    }
 
    <a href="javascript:history.go(-1);" class="custom-link">Tillbaka</a>
</div>
