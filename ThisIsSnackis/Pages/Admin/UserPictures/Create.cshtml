@page
@model ThisIsSnackis.Pages.Admin.UserPictures.CreateModel

@{
    ViewData["Title"] = "Skapa";
}

<h1>Ladda upp profilbild</h1>


<hr />

<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="UploadedImage" class="control-label">Din bild:</label>
        <input type="file" asp-for="UploadedImage" class="form-control" />
        <span asp-validation-for="UploadedImage" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserPicture.UserId" class="control-label"></label>
        <input asp-for="UserPicture.UserId" class="form-control" readonly />
        <span asp-validation-for="UserPicture.UserId" class="text-danger"></span>
    </div><br />

    <div class="form-group">
        <input type="submit" value="Spara" class="btn btn-primary" />
    </div>
</form><br />

<div>
    <a href="javascript:history.go(-1);" class="custom-link">Tillbaka</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}