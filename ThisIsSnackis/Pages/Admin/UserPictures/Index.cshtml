@page
@model ThisIsSnackis.Pages.Admin.UserPictures.IndexModel

@{
    ViewData["Title"] = "Index";
    var userPictures = Model.UserPicture.Where(p => p.UserId == User.Identity.Name).ToList();
    var hasProfilePicture = userPictures.Any(p => !string.IsNullOrEmpty(p.Image));
}

<h1>Profilbild</h1>
<h5><i>Bilderna lagras och kommer att vara synlig för andra</i></h5>

@if (!hasProfilePicture)
{
    <p>
        <a asp-page="Create">Ladda upp ny profilbild</a>
    </p>
}
else
{
    <p>Du kan bara ha en profilbild i taget. För att byta profilbild behöver du ta bort din befintliga profilbild först.</p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserPicture[0].Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserPicture[0].UserId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in userPictures)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(item.Image))
                    {
                        <img class="img-fluid img-small" src="~/Images/@item.Image" alt="User Picture" />
                    }
                    else
                    {
                        <p>Ingen bild tillgänglig</p>
                    }
                </td>
                <td>
                    @item.UserId
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="custom-link">Redigera</a>
                    <a asp-page="./Details" asp-route-id="@item.Id" class="custom-link">Detaljer</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="custom-link">Ta bort</a>
                </td>
            </tr>
        }
    </tbody>
</table>