@page
@model IndexModel
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Home page";
}

<div class="background-image">
    <div class="overlay">
        <div class="text-center">
            @if (Model.Headers != null && Model.Headers.Any())
            {
                foreach (var header in Model.Headers)
                {
                    <h1 class="display-4">@header.TheHeader</h1>
                }
            }
            else
            {
                <h1 class="display-4">Snackis</h1>
            }
        </div>

        @if (SignInManager.IsSignedIn(User))
        {
            <p>Du är inloggad som @User.Identity.Name</p>
        }
        else
        {
            <div class="alert alert-danger">Logga in eller registrera dig för att få tillgång till hela sidan!</div>
        }
    </div>
</div>